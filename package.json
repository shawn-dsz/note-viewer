{
  "name": "note-viewer",
  "version": "1.0.0",
  "description": "A beautiful static documentation viewer for markdown files",
  "type": "module",
  "bin": {
    "note-viewer": "./bin/cli.js"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./src/config.ts",
      "types": "./src/config.ts"
    }
  },
  "files": [
    "dist",
    "bin",
    "templates",
    "src",
    "scripts",
    "index.html",
    "vite.config.ts",
    "tsconfig.json",
    "tailwind.config.js",
    "postcss.config.js"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:e2e": "playwright test",
    "type-check": "tsc --noEmit",
    "generate:catalog": "tsx scripts/generate-docs-catalog.ts",
    "predev": "tsx scripts/generate-docs-catalog.ts",
    "prebuild": "tsx scripts/generate-docs-catalog.ts",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "documentation",
    "markdown",
    "static-site-generator",
    "notes",
    "viewer",
    "knowledge-base"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": ""
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@types/katex": "^0.16.8",
    "@types/node": "^25.0.8",
    "@types/react": "^19.2.8",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.2",
    "autoprefixer": "^10.4.23",
    "gray-matter": "^4.0.3",
    "highlight.js": "^11.11.1",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.18",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vitest": "^4.0.17"
  },
  "dependencies": {
    "@fontsource/inter": "^5.2.8",
    "@fontsource/jetbrains-mono": "^5.2.8",
    "commander": "^12.1.0",
    "fuse.js": "^7.1.0",
    "katex": "^0.16.27",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-markdown": "^10.1.0",
    "react-router-dom": "^7.12.0",
    "rehype-highlight": "^7.0.2",
    "rehype-katex": "^7.0.1",
    "rehype-raw": "^7.0.0",
    "remark-gfm": "^4.0.1",
    "remark-math": "^6.0.0"
  }
}
